  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\Schema\TestConfig.xsd" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\Schema\TestConfig.xsd" />
